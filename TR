pipeline {
    agent any

    tools {
        maven 'Maven3.8.2'
        jdk 'openJDK11'
    }

    environment {
        AWS_REGION = 'ap-south-1'
        ECR_REPO = '744074487898.dkr.ecr.ap-south-1.amazonaws.com/my-ecr-repo'
        IMAGE_TAG = 'latest'
    }

    stages {
        stage('Clone Repository') {
            steps {
                git url: 'https://github.com/Mraakhil/dockertheend.git', branch: 'main'
            }
        }

        stage('Login to AWS ECR') {
            steps {
                sh 'aws ecr get-login-password --region $AWS_REGION | docker login --username AWS --password-stdin $ECR_REPO'
            }
        }

        stage('Build Docker Image') {
            steps {
                sh 'docker build -t my-ecr-repo .'
            }
        }

        stage('Tag Docker Image') {
            steps {
                sh 'docker tag my-ecr-repo:latest $ECR_REPO:$IMAGE_TAG'
            }
        }

        stage('Push Docker Image to ECR') {
            steps {
                sh 'docker push $ECR_REPO:$IMAGE_TAG'
            }
        }
    }
}
